extends views/layout/layout

block variables
	- lang = 'ru'
	- title = 'Никита Алманов - front-end разработка'
	- preloader = true
	- popups = true

block content
	section.hero(data-fullscreen)
		.container.hero__container
			h1.title.title--big.hero__title
				span Front-end
				span(data-typed) разработка
			.hero__actions
				a.button.button--fw.hero__button(
					href='#'
					data-goto='.portfolio'
					data-goto-header
				) Портфолио
				a.button.button--fw.hero__button(href='https://t.me/nikkeyl')
					| Заказать вёрстку
	section.about-me
		.about-me__inner
			.container.about-me__container
				.about-me__body
					h2.title.about-me__title
						| Кто я?
					.text
						p Я изучаю front-end разработку лишь год, #[strong но уже не уступаю в качестве и скорости моей работы бывалым разработчикам.]
						p В этом вы сами можете убедиться перейдя в #[a.link(href='#' data-goto='.portfolio' data-goto-header) #[span портфолио]].
						p Также благодаря моему минимализму я #[strong пишу чистый и понятный код].
						p Если вы хотите узнать #[strong какими технологиями я владею], то можете спуститься чуть #[a.link(href='#' data-goto='.skills' data-goto-header) #[span ниже]].

						each skill in skills.skills
							p.sr-only=skill.a11y

		.about-me__image
			img(
				src='@img/about/nikkeyl.jpg'
				alt='Никита Алманов'
			)
	.skills(role='marquee')
		.skills__icons
			each skill in skills.skills
				.skills__icon
					img(
						src=skill.icon
						alt=skill.name
						data-tippy-content=skill.name
						loading='lazy'
					)

	section.developments
		.container
			h2.title.developments__title
				| Мои разработки
			.grid
				each repo in repos.repos
					a.developments__card(
						href=`https://github.com/nikkeyl/${repo.name}`
						aria-label=repo.name
					) #[p.sr-only=repo.name]
						img(
							src=`https://github-readme-stats.vercel.app/api/pin/?username=nikkeyl&repo=${repo.name}&hide_border=true&title_color=80f&text_color=000&icon_color=80f`
							alt='illicit'
						)

	section.portfolio
		.container
			h2.title.portfolio__title
				| Портфолио
			.grid.portfolio__cards
				each card in projects.cards
					article.project-card
						a.bg-image.project-card__image(href=card.linkSite)
							img(
								src=card.img
								alt=card.name
								loading='lazy'
							)
						.project-card__body
							h3.card-title.project-card__title
								a(href=card.linkSite)
									=card.name
							.project-card__actions
								a.button.project-card__button(
									href=card.linkSite
									data-tippy-content=card.name
								) Посмотреть
								a(
									class=[
										'project-card__src-code',
										card.disabled ? 'disabled' : ''
									]
									href=card.linkCode
									data-tippy-content=card.disabled ? false : card.srcCode
									tabindex=card.disabled ? '-1' : false
								) #[.sr-only=card.disabled ? [card.srcCode + ' не доступен'] : ['Посмотреть ' + card.srcCode]]
									svg
										use(href='@img/icons/sprite.svg#github')

	section.reviews
		.container
			h2.title.reviews__title
				| Отзывы
			.swiper.reviews__slider
				.swiper-wrapper.reviews__wrapper
					.swiper-slide
						each review in reviews.reviews
							article(class=[
								'review',
								review.class
							])
								.review__info
									.bg-image.review__image
										img(
											src=review.img
											alt=review.name
											title=review.name
											loading='lazy'
										)
									h3.review-name.review__name
										=review.name
								.text.review__text
									| !{review.text}

				.swiper-pagination
	section.questions
		.container
			h2.title.questions__title
				| Q&A
				p.sr-only Вопросы и Ответы
			.grid(
				data-spoilers
				data-one-spoiler
			)
				each spoiler in spoilers.spoilers
					details.spoiler
						summary.spoiler__trigger(
							data-spoiler
							data-spoiler-close
						)
							strong=spoiler.title
							| #[.sr-only !{spoiler.content}]
							span
						.text.spoiler__content
							| !{spoiler.content}

				details.spoiler
					summary.spoiler__trigger(
						data-spoiler
						data-spoiler-close
					) #[strong Остались вопросы? #[p.sr-only Я отвечаю на звонки и сообщения с 12:00 до 20:00.]]
						span
					.text.spoiler__content
						.spoiler__call-me
							a.spoiler__info(
								href='#'
								data-popup='#info'
								data-tippy-content='Часы работы'
							) Свяжитесь со мной
								svg
									use(href='@img/icons/sprite.svg#info')
						.socials.spoiler__socials
							each social in socials.socials
								a.socials__item(
									href=social.link
									data-tippy-content=social.tip
								)
									svg
										use(href=`@img/icons/sprite.svg#${social.icon}`)
