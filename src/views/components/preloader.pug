#preloader
	style.
		*,
		*::before,
		*::after {
			margin: 0;
			border: 0;
			padding: 0;
			box-sizing: border-box;
		}

		body {
			overflow: hidden;
			touch-action: none;
		}

		.preloader {
			position: fixed;
			inset: 0;
			z-index: 3;
			background-color: #fff;
		}

		.dark .preloader {
			background-color: #333;
		}

		.halloween .preloader {
			background-color: #000;
		}

		.preloader__load {
			position: absolute;
			inset-block-start: 50%;
			inset-inline-start: 50%;
			block-size: auto;
			translate: -50% -50%;
			inline-size: 6.25rem;
			animation: spin 2s linear infinite;
		}

		@keyframes spin {
			0% {
				rotate: 0;
			}

			100% {
				rotate: 360deg;
			}
		}

		.preloader.hide {
			opacity: 0;
			visibility: hidden;
			transition:
				visibility .3s,
				opacity .3s;
		}
	script.
		const html = document.documentElement;
		const color = html.classList.contains('halloween') ? "#f80" : "#0d8";
		const preloaderTemplate =
			`
				<div class="preloader">
					<div class="preloader__load">
						<svg viewBox="0 0 100 100">
							<path
								fill="transparent"
								stroke="${color}"
								stroke-width="8"
								stroke-linecap="round"
								d="M50 10 a 40 40 0 0 1 0 80"
							/>
						</svg>
					</div>
				</div>
			`;

		html.insertAdjacentHTML(
			"beforeend",
			preloaderTemplate
		);
		document.addEventListener('DOMContentLoaded', () => {
			const preloader = () => {
				const preloader = document.querySelector('.preloader');
				const preloaderContainer = document.getElementById('preloader');
				const delay = 500;

				if (html.classList.contains('loaded')) {
					setInterval(() => {
						preloader.classList.add('hide');

						setTimeout(() => {
							preloader.remove();
							preloaderContainer.remove();
						}, delay);
					}, delay);
				}
			}

			preloader();
		})
