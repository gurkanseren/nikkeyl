#preloader
	script.
		function preloader() {
			const preloaderTemplate =
				`
					<div class="preloader">
						<div class="preloader__load">
							<svg viewbox="0 0 100 100">
								<circle cx="50" cy="50" r="45" fill="transparent" />
								<path
									fill="transparent"
									stroke-linecap="round"
									stroke-width="8"
									stroke="#0d8"
									d="M50 10 a 40 40 0 0 1 0 80">
								</path>
							</svg>
						</div>
					</div>
				`;

			document.querySelector('html').insertAdjacentHTML(
				"beforeend",
				preloaderTemplate
			);
		}

		preloader();
	style.
		*,
		*::before,
		*::after {
			margin: 0;
			border: 0;
			padding: 0;
			box-sizing: border-box;
		}

		body {
			overflow: hidden;
			touch-action: none;
		}

		.loading body {
			opacity: 0;
			visibility: hidden;
		}

		.loaded body {
			opacity: 1;
			visibility: visible;
			transition: opacity .5s;
		}

		.preloader {
			position: fixed;
			width: 100%;
			height: 100%;
			top: 0;
			left: 0;
			background-color: #fff;
			z-index: 999;
			opacity: 1;
			visibility: visible;
		}

		.dark .preloader {
			background-color: #333;
		}

		.preloader__load {
			width: 100px;
			height: 100px;
			position: absolute;
			left: 50%;
			top: 50%;
			transform: translate(-50%, -50%);
			animation: spin 2s linear infinite;
		}

		@keyframes spin {
			0% {
				transform: translate(-50%, -50%) rotate(0deg);
			}

			100% {
				transform: translate(-50%, -50%) rotate(360deg);
			}
		}

		.preloader.hide {
			opacity: 0;
			visibility: hidden;
			transition:
				visibility 0.3s,
				opacity 0.3s;
		}
