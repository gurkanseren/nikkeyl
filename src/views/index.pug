extends layout/layout

block variables
	- title = 'Nikita Almanov - Front-End Development'
	- preloader = true
	- popups = true
	- userName = 'nikkeyl'
	- header = true
	- footer = true

block content
	section.hero.fullscreen.flex-align-center
		.container.hero__container
			h1.title.title--big.hero__title
				| #[span Front-End]
				| #[span(data-typed) Development]
			.hero__actions
				a.button.button--full.hero__button(
					href='#portfolio'
				) Portfolio
				a.button.button--full.hero__button(href=`https://t.me/${userName}`)
					| Order a Website
	section.about-me
		.about-me__inner
			.container.about-me__container
				.about-me__body.padding-block
					h2.title.margin-bottom.about-me__title
						| Who Am I?
					.text
						p I have been studying front-end development for only a year, #[strong but I am no longer inferior in quality and speed of my work to experienced developers.]
						p You can see for yourself by going to #[a.link(href='#portfolio') portfolio].
						p Also, thanks to my minimalism, I #[strong write clean and understandable code].
						p If you want to know #[strong what technologies I own], you can go down a little #[a.link(href='#skills') lower].

						each skill in skills.skills
							p.sr-only=skill.name

		.about-me__image.bg-spare
			img(
				src=`@img/about/${userName}.jpg`
				alt='Nikita Almanov'
			)
	.skills.padding-block#skills
		h2.title.margin-bottom
			| Skills
		.skills__row(role='marquee')
			.skills__icons.gap
				each skill in skills.skills
					.skills__icon
						img(
							src=skill.icon
							alt=skill.name
							data-tippy-content=skill.name
						)

	section.portfolio.padding-block#portfolio
		.container
			h2.title.margin-bottom
				| Portfolio
			.grid.portfolio__cards.gap
				each card in projects.cards
					article.project-card.border-radius
						a.project-card__image.bg-image.bg-spare.broken-glass(href=card.linkSite)
							img(
								src=card.img
								alt=card.name
							)
						.project-card__body
							h3.card-title.project-card__title
								a(href=card.linkSite)
									=card.name
							a.button.project-card__button(
								href=card.linkSite
								data-tippy-content=card.name
							) View

	section.reviews.padding-block
		.container
			h2.title.margin-bottom
				| Reviews
			.swiper.reviews__slider
				.swiper-wrapper.margin-bottom
					each review in reviews.reviews
						.swiper-slide
							article(class=[
								'review',
								review.class,
								'border-radius',
								'broken-glass'
							])
								.review__info.flex-align-center
									.review__image.bg-image.bg-spare
										img(
											src=review.img
											alt=review.name
										)
									h3.review-name.review__name
										=review.name
								.text.review__text
									| !{review.text}

				.swiper-pagination.reviews__pagination
	section.padding-block#questions
		.container
			h2.title.margin-bottom
				| FAQ
				span.sr-only Questions and answers
			.grid.gap(
				data-spoilers
				data-one-spoiler
			)
				each spoiler in spoilers.spoilers
					details.spoiler.border-radius
						summary.spoiler__trigger.gap.flex-align-center(
							data-spoiler
							data-spoiler-close
						)
							strong=spoiler.title
							span
						.text.spoiler__content
							| !{spoiler.content}
						.sr-only !{spoiler.content}

				details.spoiler.border-radius
					summary.spoiler__trigger.gap.flex-align-center(
						data-spoiler
						data-spoiler-close
					) #[strong Questions Left?]
						span
					.text.spoiler__content
						.spoiler__call-me
							a.spoiler__info.flex-align-center(
								href='#'
								data-popup='#info'
								data-tippy-content='Working hours'
							) Contact Me
								svg
									use(href='@img/icons/sprite.svg#info')
								//- img(src='@img/svg/halloween/hat.svg' alt='hat')
						ul.socials.spoiler__socials.flex-align-center
							each social in socials.socials
								li.socials__item
									a(
										href=social.link
										data-tippy-content=social.tip
										aria-label=social.tip
									)
										svg
											use(href=`@img/icons/sprite.svg#${social.icon}`)
					p.sr-only I answer calls and messages from 12:00 to 20:00.
