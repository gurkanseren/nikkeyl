- const socials = require('/src/views/json/socials.json')

header.header
	.container.header__container
		.logo.header__logo
			| Nikita Almanov
		.header__body
			ul.socials
				each social in socials.socials
					li.socials__item
						a(
							href=social.link
							data-tippy-content=social.tip
							aria-label=social.tip
						)
							svg
								use(href=`@img/icons/sprite.svg#${social.icon}`)

			a.button.header__button(
				href='#'
				data-goto='.questions'
				data-goto-header
				data-tippy-content='Questions about work'
			) FAQ
