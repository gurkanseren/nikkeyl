extends layout/layout

block variables
	- title = 'Page Not Found - 404'
	- header = false
	- footer = false
	- popups = false
	- preloader = true
	- gitHubName = 'nikkeyl'

block content
	section.error-404.bg-event.fullscreen.flex-align-center
		.container.flex-align-center.flex-column
			h1.error-404__title.margin-bottom-20.flex-align-center
				| 4
				div
					img(
						src='@img/svg/halloween/eye.svg'
						alt='eye'
					)
					span 0
				| 4
			a.button.button--full(href=`https://${gitHubName}.github.io/${gitHubName}`)
				| Back Home
